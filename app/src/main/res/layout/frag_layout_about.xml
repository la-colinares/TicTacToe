<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/BackgroundColorApp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="serif-monospace"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textColor="?attr/textNameColor"
            android:textSize="40sp" />

        <View
            android:layout_width="156dp"
            android:layout_height="2dp"
            android:layout_marginStart="10dp"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="Version"
            android:textColor="?attr/textTagColor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="1.0.0"
            android:textColor="?attr/textNameColor"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="Date Created"
            android:textColor="?attr/textTagColor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="September 2018"
            android:textColor="?attr/textNameColor"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="Developed By"
            android:textColor="?attr/textTagColor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="Lowi Adrian Colinares"
            android:textColor="?attr/textNameColor"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/about_fab_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:src="@drawable/ic_facebook"
                android:tint="?attr/iconTintColor"
                app:backgroundTint="?attr/BackgroundColorApp"
                app:elevation="8dp"
                app:fabSize="normal"
                app:rippleColor="?attr/colorPrimary" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/about_fab_linkedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:src="@drawable/ic_linkedin"
                android:tint="?attr/iconTintColor"
                app:backgroundTint="?attr/BackgroundColorApp"
                app:elevation="8dp"
                app:fabSize="normal"
                app:rippleColor="?attr/colorPrimary" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/about_fab_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:src="@drawable/ic_github"
                android:tint="?attr/iconTintColor"
                app:backgroundTint="?attr/BackgroundColorApp"
                app:elevation="8dp"
                app:fabSize="normal"
                app:rippleColor="?attr/colorPrimary" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="Credits to"
            android:textColor="?attr/textTagColor"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="Coding in Flow"
            android:textColor="?attr/textNameColor"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="https://www.codinginflow.com"
            android:textColor="?attr/textNameColor"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="Tic-Tac-Toe Game Grey Icon"
            android:textColor="?attr/textNameColor"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:paddingStart="10dp"
            android:text="https://www.softicons.com"
            android:textColor="?attr/textNameColor"
            android:textSize="12sp"/>


    </LinearLayout>
</ScrollView>